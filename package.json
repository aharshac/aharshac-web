    "cssnano": "^3.10.0",
    "debug-loader": "0.0.1",
    "emoji-name-map": "^1.2.4",
    "emoji-unicode": "^1.0.6",
    "eslint": "^3.7.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^6.4.0",
